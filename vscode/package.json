{
  "name": "elm-language-server-rs",
  "displayName": "elm",
  "description": "language server for elm, in rust",
  "author": "lue_bird",
  "icon": "images/icon.png",
  "license": "MIT",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/lue-bird/elm-language-server-rs"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "elm"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "activationEvents": [
    "workspaceContains:**/elm.json"
  ],
  "main": "./out/extension",
  "contributes": {
    "languages": [
      {
        "id": "elm",
        "extensions": [
          ".elm"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "scopeName": "markdown.elm.codeblock",
        "path": "./syntaxes/codeblock.json",
        "injectTo": [
          "text.html.markdown"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.elm": "elm"
        }
      },
      {
        "language": "elm",
        "scopeName": "source.elm",
        "path": "./syntaxes/elm-syntax.json"
      }
    ],
    "commands": [
      {
        "command": "elm.commands.restart",
        "title": "restart elm-language-server-rs",
        "category": "elm"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "elm",
      "properties": {
        "elm-language-server-rs.elmPath": {
          "scope": "window",
          "type": "string",
          "default": "",
          "description": "compiler executable, default elm. Should be empty by default."
        },
        "elm-language-server-rs.elmFormatPath": {
          "scope": "window",
          "type": "string",
          "default": "",
          "description": "test runner executable, default elm-test. Should be empty by default."
        },
        "elm-language-server-rs.elmTestPath": {
          "scope": "window",
          "type": "string",
          "default": "",
          "description": "formatter executable, default elm-format. \"builtin\" is a fast rust formatter that is mostly but not fully compatible. Should be empty by default."
        }
      }
    }
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.0",
    "typescript": "5.3.3"
  },
  "scripts": {
    "compile": "tsc -p . --noEmit && esbuild --platform=node --bundle extension.js --external:vscode --minify --outfile=out/extension.js",
    "package": "npm install && npm run compile && vsce package"
  }
}